<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project201.MainPage"
             NavigationPage.HasNavigationBar="True">
    <StackLayout>

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" >
            <Label Text="Welcome to App Stack" FontSize="Header"/>
        </StackLayout>
    
        <StackLayout VerticalOptions="EndAndExpand"  Orientation="Horizontal" Spacing="30" HorizontalOptions="CenterAndExpand" >
            <Button Text="Home" TextColor="Black"  CornerRadius="30"  Clicked="homebt_Clicked" BorderColor="Black" BackgroundColor="White"
                    x:Name="homebt"/>
            <Button Text="Catalogue" TextColor="Black"  CornerRadius="30" Clicked="catbt_Clicked" BorderColor="Black" 
                    x:Name="catbt" BackgroundColor="White"/>
            <Button Text="Account" TextColor="Black"  CornerRadius="30" Clicked="accountbt_Clicked" BorderColor="Black" 
                    x:Name="accountbt" BackgroundColor="White"/>

        </StackLayout>
    </StackLayout>



</ContentPage>
